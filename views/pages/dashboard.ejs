<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/header.ejs') %>
    <title>Dashbord | toDo</title>
</head>
<body>
    <header></header>
    <main class="container">
        <a href="/users/logout">Logout</a>
        <h1>Welcome <%= user.charAt(0).toUpperCase() + user.slice(1) %></h1>
        <ul>
            <% if(typeof errors != 'undefined') { %> 
                <% errors.forEach(error => { %>
                    <li class="text-danger"><%= error.message %></li>
                <% }) %>
            <% } %> 
        </ul>

        <div class="row col-md-12">            
            <section class="col-sm-12 col-md-6 col-md-offset-2 mt-5">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>Uncompleted Tasks</h3>
                    </div>
                    <div class="card-body">
                        <div class="todo-list-pending"> 
                            <% let countPending = 0; %>
                            <% for(var i = 0; i < todos.length; i++) { %>
                                <% if(todos[i].status == 0) { %>
                                    <div class="row col-sm-12">
                                        <div class="col-sm-10">
                                            <input type="checkbox" name="pending" value="<%= todos[i].id %>" onclick='toggleTaskStatus(event,"<%= todos[i].id %>")' title="Mark as completed" /> <%= todos[i].task %> 
                                        </div>
                                        <div class="col-sm-2"> 
                                            <button type="button" id="del" onclick='deleteTask(event, "<%= todos[i].id %>")' class="btn btn-outline-danger" name="btnPending" title="Delete pending task"><img src="/images/icon-delete.png"></button>
                                        </div>
                                    </div>
                                <% countPending++; } %>                               
                            <% } %>

                            <% if(countPending == 0) { %>
                                <div>No task added</div>
                            <% } %>
                            </div>
                    </div>
                </div>
            </section>

            <section class="col-sm-12 col-md-6  mt-5">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>Completed Tasks</h3>
                    </div>
                    <div class="card-body">
                        <div class="todo-list-completed">
                            <% let countComplete = 0; %>
                            <% for(var i = 0; i < todos.length; i++) { %>
                                <% if(todos[i].status == 1) { %>
                                    <div class="row col-sm-12">
                                        <div class="col-sm-10">
                                            <input type="checkbox" name="completed" value="<%= todos[i].id %>" onclick='toggleTaskStatus(event,"<%= todos[i].id %>")' title="Mark as not completed"/> <%= todos[i].task %> 
                                        </div>
                                        <div class="col-sm-2"> 
                                            <button type="button" id="del" onclick='deleteTask(event, "<%= todos[i].id %>")' class="btn btn-outline-danger" name="btnCompleted"><img src="/images/icon-delete.png" title="Delete completed task"></button>
                                        </div>
                                    </div>
                                <% countComplete++; } %>
                            <% } %>

                            <% if(countComplete == 0) { %>
                                <div>No task completed</div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <section class="todo-add mt-5">
            <div class="row col-sm-6">
                <form action="/users/dashboard" method="POST" id="addTask">
                    <div class="row ml-4">                        
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <input type="text" id="task" name="task" placeholder="Enter new task here" required>
                            </div>                            
                            <div class="col-sm-2">
                                <input type="submit" value="Add" title="Add new task">
                            </div>
                        </div>
                    </div>                    
                    <div class="col-sm-12">
                        <input type="hidden" id="userId" name="userId" value="<%= userId %>">
                    </div>
                </form> 
            </div>
           
        </section>
    </main>
    <footer>
        <%- include('../partials/footer.ejs') %>
    </footer>
</body>
</html>