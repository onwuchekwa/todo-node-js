<!DOCTYPE html>
<html lang="en">
<head> 
    <%- include('../partials/header.ejs') %>
    <title>Register | toDo</title>
</head>
<body>
    <header></header>
    <main>
        <h1>Register</h1>
        <ul>
           <% if(typeof errors != 'undefined') { %> 
                <% errors.forEach(error => { %>
                    <li class="text-danger"><%= error.message %></li>
                <% }) %>
            <% } %>
        </ul>

        <form action="/users/register" method="POST">
            <div class="form-group">
                <label for="" class="top">First Name <span class="text-danger">*</span></label>
                <input type="text" id="firstname" name="firstname" placeholder="First Name" required>
            </div>
            <div class="form-group">
                <label for="" class="top">Last Name <span class="text-danger">*</span></label>
                <input type="text" id="lastname" name="lastname" placeholder="Last Name" required>
            </div>
            <div class="form-group">
                <label for="" class="top">Username <span class="text-danger">*</span></label>
                <input type="text" id="username" name="username" placeholder="Username" required>
            </div>
            <div class="form-group">
                <label for="" class="top">Password <span class="text-danger">*</span></label>
                <input type="password" id="password" name="password" placeholder="Password" required>
            </div>
            <div class="form-group">
                <label for="" class="top">Confirm Password <span class="text-danger">*</span></label>
                <input type="password" id="confirm_password" name="confirm_password" placeholder="Confirm Password" required>
            </div>
            <div>
                <input type="submit" value="Register">
            </div>
            <a href="/users/login">Already registered? Login</a>
        </form>
    </main>
    <footer>
        <%- include('../partials/footer.ejs') %>
    </footer>
</body>
</html>